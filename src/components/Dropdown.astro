---
interface Props {
	title: string;
	body: string;
}

const { title, body } = Astro.props;
---

<div class="dropdown">
	<details>
		<summary>{title}</summary>
		<hr />
		<div class="dropdown-body">
			<p class="text-left">{body}</p>
			<slot />
		</div>
	</details>
</div>

<style>
	.dropdown {
		margin-bottom: 1rem;
		border: 0.075rem solid #e1e1e1;
		border-radius: 0.175rem;
		padding: 0.25rem;
		display: flex; /* Assuming this is already a flex container */
	}

	details {
		width: 100%;
		text-align: left;
		align-self: flex-start; /* Add this line */
	}

	.dropdown-body {
		border-top: 0.075rem solid #e1e1e1;
		padding-top: 0.25rem;
	}

	summary {
		font-weight: bold;
		cursor: pointer;
	}

	summary:hover {
		text-decoration: underline;
	}
</style>
